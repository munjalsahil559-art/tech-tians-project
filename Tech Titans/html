    <script>
        // Global variables
        let currentUser = null;
        let selectedComplaintType = null;
        let complaints = [];

        // Load data from localStorage on page load
        window.onload = function() {
            loadFromStorage();
            if (currentUser) {
                showComplaintSection();
            }
        };

        // Login form submission
        document.getElementById('loginForm').addEventListener('submit', function(e) {
            e.preventDefault();
            const name = document.getElementById('userName').value;
            const email = document.getElementById('userEmail').value;
            const phone = document.getElementById('userPhone').value;

            currentUser = {
                name: name,
                email: email,
                phone: phone
            };

            saveToStorage();
            showComplaintSection();
        });

        // Show complaint section after login
        function showComplaintSection() {
            document.getElementById('loginSection').classList.remove('active');
            document.getElementById('complaintSection').classList.add('active');
            document.getElementById('displayUserName').textContent = currentUser.name;
            renderComplaintsHistory();
        }

        // Logout function
        function logout() {
            if (confirm('Are you sure you want to logout?')) {
                currentUser = null;
                selectedComplaintType = null;
                document.getElementById('loginForm').reset();
                document.getElementById('complaintSection').classList.remove('active');
                document.getElementById('loginSection').classList.add('active');
                saveToStorage();
            }
        }

        // Complaint type selection
        document.querySelectorAll('.complaint-type-card').forEach(card => {
            card.addEventListener('click', function() {
                document.querySelectorAll('.complaint-type-card').forEach(c => c.classList.remove('selected'));
                this.classList.add('selected');
                selectedComplaintType = this.getAttribute('data-type');
                document.getElementById('selectedComplaintType').value = selectedComplaintType;
            });
        });

        // Photo upload preview
        document.getElementById('photoUpload').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(event) {
                    const preview = document.getElementById('imagePreview');
                    preview.src = event.target.result;
                    preview.classList.add('show');
                };
                reader.readAsDataURL(file);
            }
        });

        // Get location function
        function getLocation() {
            if (navigator.geolocation) {
                document.getElementById('locationInfo').style.display = 'block';
                document.getElementById('address').textContent = 'Fetching location...';
                
                navigator.geolocation.getCurrentPosition(
                    function(position) {
                        const lat = position.coords.latitude;
                        const lng = position.coords.longitude;
                        
                        document.getElementById('latitude').textContent = lat.toFixed(6);
                        document.getElementById('longitude').textContent = lng.toFixed(6);
                        document.getElementById('latitudeValue').value = lat;
                        document.getElementById('longitudeValue').value = lng;
                        
                        // Reverse geocoding simulation (in real app, use Google Maps Geocoding API)
                        document.getElementById('address').textContent = `Location captured successfully (${lat.toFixed(4)}, ${lng.toFixed(4)})`;
                    },
                    function(error) {
                        alert('Error getting location: ' + error.message);
                        document.getElementById('locationInfo').style.display = 'none';
                    }
                );
            } else {
                alert('Geolocation is not supported by your browser');
            }
        }

        // Complaint form submission
        document.getElementById('complaintForm').addEventListener('submit', function(e) {
            e.preventDefault();

            if (!selectedComplaintType) {
                alert('Please select a complaint type');
                return;
            }

            if (!document.getElementById('latitudeValue').value) {
                alert('Please capture your location');
                return;
            }

            // Generate tracking ID
            const trackingId = 'CC' + Date.now().toString().slice(-8);

            // Create complaint object
            const complaint = {
                id: trackingId,
                type: selectedComplaintType,
                description: document.getElementById('complaintDescription').value,
                latitude: document.getElementById('latitudeValue').value,
                longitude: document.getElementById('longitudeValue').value,
                photo: document.getElementById('imagePreview').src,
                status: 'Pending',
                date: new Date().toLocaleString(),
                userName: currentUser.name,
                userEmail: currentUser.email,
                userPhone: currentUser.phone
            };

            // Add to complaints array
            complaints.push(complaint);
            saveToStorage();

            // Show success message
            document.getElementById('trackingId').textContent = trackingId;
            document.getElementById('successMessage').classList.add('show');

            // Reset form
            document.getElementById('complaintForm').reset();
            document.getElementById('imagePreview').classList.remove('show');
            document.getElementById('locationInfo').style.display = 'none';
            document.querySelectorAll('.complaint-type-card').forEach(c => c.classList.remove('selected'));
            selectedComplaintType = null;

            // Hide success message after 5 seconds
            setTimeout(function() {
                document.getElementById('successMessage').classList.remove('show');
            }, 5000);

            // Render complaints history
            renderComplaintsHistory();

            // Scroll to top
            window.scrollTo({ top: 0, behavior: 'smooth' });
        });

        // Render complaints history
        function renderComplaintsHistory() {
            const container = document.getElementById('complaintsHistoryContainer');
            
            // Filter complaints by current user
            const userComplaints = complaints.filter(c => c.userEmail === currentUser.email);

            if (userComplaints.length === 0) {
                container.innerHTML = '<p style="color: #777; text-align: center; padding: 20px;">No complaints yet. Submit your first complaint above!</p>';
                return;
            }

            container.innerHTML = userComplaints.map(complaint => `
                <div class="complaint-card">
                    <div class="complaint-header">
                        <div class="complaint-type">${complaint.type}</div>
                        <div class="status ${complaint.status.toLowerCase().replace(' ', '-')}">${complaint.status}</div>
                    </div>
                    <div class="description">${complaint.description}</div>
                    <div class="meta">
                        <strong>Tracking ID:</strong> ${complaint.id} | 
                        <strong>Date:</strong> ${complaint.date} | 
                        <strong>Location:</strong> ${parseFloat(complaint.latitude).toFixed(4)}, ${parseFloat(complaint.longitude).toFixed(4)}
                    </div>
                </div>
            `).reverse().join('');
        }

        // Save to localStorage
        function saveToStorage() {
            localStorage.setItem('currentUser', JSON.stringify(currentUser));
            localStorage.setItem('complaints', JSON.stringify(complaints));
        }

        // Load from localStorage
        function loadFromStorage() {
            const savedUser = localStorage.getItem('currentUser');
            const savedComplaints = localStorage.getItem('complaints');

            if (savedUser) {
                currentUser = JSON.parse(savedUser);
            }

            if (savedComplaints) {
                complaints = JSON.parse(savedComplaints);
            }
        }
    </script>
</body>
</html>
