            </div>

            <!-- Complaint Section -->
            <div class="complaint-section" id="complaintSection">
                <div class="user-info" id="userInfo">
                    <div class="welcome">Welcome, <span id="displayUserName"></span>!</div>
                    <button class="logout-btn" onclick="logout()">Logout</button>
